                                        <Border CornerRadius="6" BorderBrush="{StaticResource Blue}" Background="Black" BorderThickness="2" DockPanel.Dock="Top">
                                            <Grid Margin="0" VerticalAlignment="Top" Height="130" Width="227" HorizontalAlignment="Center">
                                                <Image Source="{Binding Image}" Margin="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="227" Height="130" Stretch="Uniform"/>
                                            </Grid>
                                        </Border>
                                    </DockPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>

                    </ListView.ItemTemplate>
                </ListView>
                <StackPanel Orientation="Horizontal" Margin="0,20,0,0" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <Button Style="{StaticResource Order1}"
                    x:Name="btn_order" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="0,0,50,0" Height="40" PreviewMouseLeftButtonDown="TouchDownOrder" PreviewMouseLeftButtonUp="TouchUpOrder"/>
                    <Button Style="{StaticResource Cancel1}" x:Name="btn_cancel" Content="" Width="120" PreviewMouseLeftButtonDown="TouchDownCancel" PreviewMouseLeftButtonUp="TouchUpCancel"/>
                </StackPanel>
            </StackPanel>
        </Grid>
        <DockPanel VerticalAlignment="Top" Height="32" Background="Black" MouseMove="Move" Margin="0">
            <Grid DockPanel.Dock="Right" 
                HorizontalAlignment="Right">


                <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right" VerticalAlignment="Center" Height="32" Width="105" Margin="0,0,3,0">


                    <Button x:Name="MinimizeButton"
                        KeyboardNavigation.IsTabStop="False"
                        Click="MinimizeWindow" Width="35" BorderBrush="Black" Height="20" Margin="0" Background="Black"
                 >
                        <Image Source="Assets/mini.png" VerticalAlignment="Center" HorizontalAlignment="Center" Width="20" Height="20"/>
                    </Button>
                    <Button x:Name="MaximizeButton"
                        KeyboardNavigation.IsTabStop="False"
                        Click="MaximizeClick" Width="35" BorderBrush="Black" Height="20" Margin="0" Background="Black"
                 >
                        <Image Source="Assets/max.png" VerticalAlignment="Center" HorizontalAlignment="Center" Width="20" Height="20"/>
                    </Button>

                    <Button x:Name="CloseButton"
                        KeyboardNavigation.IsTabStop="False"
                         
                        Command="{Binding ApplicationCommands.Close}" HorizontalContentAlignment="Center" Width="35" Click="Close" HorizontalAlignment="Right" BorderBrush="Black" Height="20" Background="Black" Margin="0"
                >
                        <Image Source="Assets/close.png" VerticalAlignment="Center" HorizontalAlignment="Center" Width="20" Height="20"/>

                    </Button>

                </StackPanel>
            </Grid>
            <Label Content="6869 Hotel Management" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="{StaticResource White}" FontSize="16"/>
        </DockPanel>
    </Grid>
</Window>
