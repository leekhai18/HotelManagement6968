<UserControl x:Class="HOTEL6968.GUI.Pages.ServicesManage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="500"
             >
    <Grid Style="{StaticResource ContentRoot}">
        <mui:ModernTab SelectedSource="/GUI/Pages/ServicesManageFoods.xaml" Layout="Tab">
            <mui:ModernTab.Links>
                <mui:Link x:Name="linkFoods" DisplayName="Món ăn" Source="/GUI/Pages/ServicesManageFoods.xaml" />
                <mui:Link x:Name="linkGames" DisplayName="Trò chơi" Source="/GUI/Pages/ServicesManageGames.xaml" />
                <mui:Link x:Name="linkRests" DisplayName="Nghỉ dưỡng" Source="/GUI/Pages/ServicesManageRests.xaml" />
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</UserControl>
